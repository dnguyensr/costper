<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-6 user-profile">
        <div class="card">
          <div class="card-block">
            <div class="card-title">
            <h3><%= user.name %></h3>
            </div>
            <div class="card-text">
              <p>Email: <%= user.email %></p>
            <% if current_user.admin? %>
              <a href="/users/<%= user.id %>" class="btn btn-primary btn-sm active">Edit User Privileges</a>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
